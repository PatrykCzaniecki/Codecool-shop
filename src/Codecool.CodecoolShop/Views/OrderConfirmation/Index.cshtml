@model Order;

@{
    ViewData["Title"] ="Order confirmation";
}
<h4>Order summary</h4>
<div>
    @foreach (var element in Model.Cart.Products)
    {
        <p>@element.Key.Name x @element.Value : @element.Key.DefaultPrice</p><br/><br/>
    }
    <h4>Your shipping details</h4>
    <p>Full name: @Model.Address.FullName</p>
    <p>Street: @Model.Address.Street</p>
    <p>Country: @Model.Address.Country</p>
    <p>City: @Model.Address.City</p>
    <p>Phone: @Model.Address.Phone</p>
    <p>Email: @Model.Address.Email</p>
    <p>Zip code:@Model.Address.Zip</p>

    <h4>Your Payment info</h4>
    <p>@Model.PaymentInfo.CardNumber</p>
    <p>@Model.PaymentInfo.ExpMonth</p>
    <p>@Model.PaymentInfo.ExpYear</p>
    <p>@Model.PaymentInfo.NameOnCard</p>
    <p>@Model.PaymentInfo.CVV</p>
</div>
<div>
    <button type="submit">Confirm</button>
</div>