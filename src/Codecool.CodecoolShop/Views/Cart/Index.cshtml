@{
    ViewData["Title"] = "Home Page";
}

@model Cart

<div class="container">

    @if (Model.Products.Count == 0)
    {
        <h1>Your cart is empty.</h1>
    }
    @if (Model.Products.Count > 0)
    {
        @foreach (var element in Model.Products)
        {
            <div style="display: flex;">
                <img src="img/@(element.Key.Name).jpg" style="height: 50px; margin-top: 15px; width: 50px;">

                <div style="height: 40px; margin-top: 20px; padding-left: 20px;">
                    <a asp-action="Add" asp-route-id="@element.Key.Id" style="border-radius: 20px; color: black; font-size: 25px; width: 40px;text-decoration: none;">
                        <i class="bi bi-plus-circle"></i>
                    </a>
                    <a asp-action="Minus" asp-route-id="@element.Key.Id" style="border-radius: 20px; color: black; font-size: 25px; width: 40px;text-decoration: none;">
                        <i class="bi bi-dash-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@element.Key.Id" style="border-radius: 20px; color: red; font-size: 25px; width: 40px;text-decoration: none;">
                        <i class="bi bi-x-circle-fill"></i>
                    </a>
                </div>

                <div style="padding-left: 20px;">
                    <p>@element.Key.Name</p>
                    <p style="margin-top: -15px;">Price: @element.Key.DefaultPrice.ToString("C2")</p>
                    <p style="margin-top: -15px;">Quantity: @element.Value</p>
                </div>
            </div>
            <hr/>
        }
        <div>
            Total products: @Model.TotalProducts()
            Total price: @Model.TotalPrice().ToString("C2")
            <a asp-action="Index" asp-controller="Address" type="button" class="btn btn-primary">Checkout</a>
        </div>
    }
</div>