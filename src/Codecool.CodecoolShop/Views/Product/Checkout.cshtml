@{
    ViewData["Title"] = "Checkout - payment";
}
<h1>@ViewData["Title"]</h1>

<p>This is your shopping cart checkout</p>


<div>
    <form action="/">
        <label for="name">Enter name:</label><br>
        <input type="name" id="name" name="name" placeholder="Jan Kowalski" size="30" required><br><br>
        <label for="phone">Enter a phone number:</label><br>
        <input type="tel" id="phone" name="phone" placeholder="123-452-678" size="11" pattern="[0-9]{3}-[0-9]{3}-[0-9]{3}" required><br><br>
        <label for="adress">Enter adress:</label><br>
        <input type="adress" id="adress" name="adress" placeholder="ul.Marcinkowskiego 12" required><br><br>
        <label for="city">Enter city:</label><br>
        <input type="city" id="city" name="city" placeholder="Warszawa" size="15" required><br><br>
        <label for="adress">Enter zip-code:</label><br>
        <input type="postCode" id="postCode" name="postCode" pattern="[0-9]{2}-[0-9]{3}" placeholder="60-400" size="6" required><br><br>
        <label for="email">Enter your email:</label><br>
        <input type="email" id="email" pattern=".+@@.+.com" size="30" required placeholder="jan.kowalski@@gmail.com"><br/><br/>
        <input type="submit" value="Go to payment" >
    </form> 
</div>